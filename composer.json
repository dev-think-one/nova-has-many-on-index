{
    "name": "think.studio/nova-has-many-on-index",
    "description": "A Laravel Nova field used to display a 'Has Many' relationship on the index screen.",
    "keywords": [
        "laravel",
        "nova-field",
        "has-many"
    ],
    "homepage": "https://github.com/dev-think-one/nova-has-many-on-index",
    "license": "MIT",
    "authors": [
        {
            "name": "Yaroslav Georgitsa",
            "email": "yg@think.studio",
            "homepage": "https://github.com/yaroslawww",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/nova": "^4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.20",
        "orchestra/testbench": "^8.5",
        "phpunit/phpunit": "^10.2",
        "psalm/plugin-laravel": "^2.8",
        "vimeo/psalm": "^5.13"
    },
    "autoload": {
        "psr-4": {
            "NovaHasManyIndex\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NovaHasManyIndex\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "XDEBUG_MODE=coverage vendor/bin/phpunit",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "extra": {
        "laravel": {
            "providers": [
                "NovaHasManyIndex\\ServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
